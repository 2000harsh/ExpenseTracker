@model ExpenseTrackerMVC.Models.mvcLimitModel
@{
    ViewBag.Title = "AddOrEdit limit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.limitId)
        <div class="form-group">
            @Html.Label("Total expense limit")
            @Html.EditorFor(model => model.limit_amount)
            @Html.ValidationMessageFor(model => model.limit_amount)
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>

    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}

